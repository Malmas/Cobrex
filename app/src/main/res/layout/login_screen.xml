<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior" tools:showIn="@layout/activity_my"
    tools:context=".MyActivity"
    android:clickable="true">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Gebruikersnaam"
        android:ems="10"
        android:id="@+id/TFusername"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="113dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/TFpassword"
        android:text="@string/password_field"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/TFusername"
        android:layout_alignStart="@+id/TFusername" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="inloggen"
        android:id="@+id/Blogin"
        android:layout_marginTop="53dp"
        android:onClick="buttonClickLogIn"
        android:layout_below="@+id/TFpassword"
        android:layout_centerHorizontal="true"
        android:nestedScrollingEnabled="false" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Cobrextitle"
        android:id="@+id/textView2"
        android:textSize="60sp"
        android:textIsSelectable="true"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/TFpassword"
        android:layout_alignStart="@+id/TFpassword"
        android:layout_alignRight="@+id/TFpassword"
        android:layout_alignEnd="@+id/TFpassword" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/fastershifting"
        android:id="@+id/textView3"
        android:textSize="20sp"
        android:layout_below="@+id/textView2"
        android:layout_alignRight="@+id/Blogin"
        android:layout_alignEnd="@+id/Blogin" />



</RelativeLayout>
